<div class="row">
<h2 class="text-center">Listing Messages</h2>
<%= render 'side_nav' %>
<div class="span9">
<table id="messages" class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Message</th>
      <th>Send at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= message.send_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td><%= link_to 'Update', edit_message_path(message), class: "btn btn-small btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New message', new_message_path, class: 'btn btn-primary' %>
</div>
