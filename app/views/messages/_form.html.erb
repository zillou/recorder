<%= form_for @message do |f| %>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, rows: 3 %><br />
  </div>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.text_field :date %><br />
  </div>

  <div class="field">
    <%= f.label :time %><br />
    <%= f.text_field :time %><br />
  </div>

  <%= f.submit %>
<% end %>
