<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Recorder", root_url, class: "brand" %>
      <div class="nav-collapse collapse" id="main-menu">
        <nav class="nav" id="main-menu-left">
          <li><%= link_to "Browse", messages_path %></li>
          <% if current_user %>
            <li><%= link_to "Sign Out", signout_path, method: :delete, confirm: "Are you sure?" %></li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </nav>
      </div>
    </div>
  </div>
</header>
